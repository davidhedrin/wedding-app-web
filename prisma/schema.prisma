generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  // url      = env("DATABASE_URL")
}

enum RolesEnum {
  Admin
  Client
}

enum DiscTypeEnum {
  Amount
  Percent
}

enum AuthProviderEnum {
  Credential
  Google
  Facebook

  @@map("AuthProviderEnum")
}

enum EventStatusEnum {
  PENDING
  NOT_PAID
  ACTIVE
  CANCELED
  ENDED
}

enum TradRecepType {
  Traditional
  Reception
}

enum ScheduleWeddingEnum {
  MB
  TOR
  CST
}

enum GroomBrideEnum {
  Groom
  Bride
}

model User {
  id             Int              @id @default(autoincrement())
  email          String           @unique
  password       String
  email_verified DateTime?
  role           RolesEnum
  fullname       String?
  image          String?
  image_path     String?
  no_phone       String?
  gender         String?
  birth_date     DateTime?
  birth_place    String?
  point          Int?             @default(0)
  is_active      Boolean?         @default(true)
  provider       AuthProviderEnum

  createdBy String?
  updatedBy String?
  deletedBy String?
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
  deletedAt DateTime?

  events  Events[]
  user_tr Tr[]
}

model VerificationToken {
  userId   Int       @unique
  token    String    @unique
  otp      String
  createAt DateTime? @default(now())
  usingAt  DateTime?
}

model PasswordResetToken {
  id       Int       @id @default(autoincrement())
  userId   Int
  token    String    @unique
  createAt DateTime? @default(now())
  usingAt  DateTime?
}

model Templates {
  id         Int      @id @default(autoincrement())
  slug       String   @unique
  name       String
  price      Int
  disc_price Int?
  short_desc String?
  desc       String?
  ctg_key    String?
  ctg_name   String?
  url        String
  flag_name  String?
  flag_color String?
  colors     String?
  language   String?
  layouts    String?
  is_active  Boolean? @default(true)

  createdBy String?
  updatedBy String?
  deletedBy String?
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
  deletedAt DateTime?

  rate_1_count Int?    @default(0)
  rate_2_count Int?    @default(0)
  rate_3_count Int?    @default(0)
  rate_4_count Int?    @default(0)
  rate_5_count Int?    @default(0)
  sold         BigInt? @default(0)
  rate_count   Int?    @default(0)

  captures TemplateCaptures[]
  events   Events[]
}

model TemplateCaptures {
  id        Int    @id @default(autoincrement())
  tmp_id    Int
  index     Int
  file_name String
  file_path String

  template Templates @relation(fields: [tmp_id], references: [id], onDelete: Cascade)
}

model Vouchers {
  id          Int          @id @default(autoincrement())
  slug        String       @unique
  code        String       @unique
  disc_type   DiscTypeEnum
  disc_amount Int
  valid_from  DateTime
  valid_to    DateTime
  total_qty   Int
  is_one_use  Boolean
  desc        String?
  is_active   Boolean?     @default(true)

  createdBy String?
  updatedBy String?
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
}

model Events {
  id          Int             @id @default(autoincrement())
  user_id     Int
  tmp_id      Int
  tmp_status  EventStatusEnum
  tmp_code    String          @unique
  tmp_ctg     String
  tmp_ctg_key String

  greeting_msg    String?
  couple_img_url  String?
  couple_img_path String?
  contact_email   String?
  contact_phone   String?
  music_url       String?

  schedule_note String?

  createdBy String?
  updatedBy String?
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt

  user          User             @relation(fields: [user_id], references: [id], onDelete: Cascade)
  template      Templates        @relation(fields: [tmp_id], references: [id], onDelete: Cascade)
  tr            Tr?
  gb_info       GroomBrideInfo[]
  schedule_info ScheduleInfo[]
}

model Tr {
  tr_id     String    @id
  user_id   Int
  event_id  Int       @unique
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt

  pay_token        String?
  pay_redirect_url String?
  pay_type         String?
  pay_acquirer     String?
  pay_key          String?
  pay_status       Boolean   @default(false)
  pay_at           DateTime?
  pay_va           String?
  pay_expiry_time  DateTime  @default(now())
  pay_bill_key     String?
  pay_bill_code    String?
  qris_url         String?

  subtotal       Int
  voucher_code   String?
  voucher_slug   String?
  voucher_type   DiscTypeEnum?
  voucher_amount Int?

  /// Add-on fields RSVP
  add_ons1        Boolean?
  add_ons1_amount Int?

  total_amount Int

  user  User   @relation(fields: [user_id], references: [id], onDelete: Cascade)
  event Events @relation(fields: [event_id], references: [id], onDelete: Cascade)
}

model GroomBrideInfo {
  id           Int            @id @default(autoincrement())
  event_id     Int
  type         GroomBrideEnum
  fullname     String
  shortname    String
  birth_place  String
  birth_date   DateTime
  birth_order  Int
  father_name  String?
  mother_name  String?
  place_origin String?
  occupation   String?
  personal_msg String?
  img_url      String?
  img_path     String?

  createdBy String?
  updatedBy String?
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt

  event Events @relation(fields: [event_id], references: [id], onDelete: Cascade)
}

model ScheduleInfo {
  id            Int                 @id @default(autoincrement())
  event_id      Int
  type          ScheduleWeddingEnum
  date          DateTime
  start_time    String
  end_time      String?
  location      String?
  address       String?
  latitude      String?
  longitude     String?
  notes         String[]
  ceremony_type TradRecepType?
  use_mb_loc    Boolean             @default(false)

  createdBy String?
  updatedBy String?
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt

  event Events @relation(fields: [event_id], references: [id], onDelete: Cascade)
}
