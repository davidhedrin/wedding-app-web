generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RolesEnum {
  ADMIN
  CLIENT
}

enum AuthProviderEnum {
  CREDENTIAL
  GOOGLE
  FACEBOOK

  @@map("AuthProviderEnum")
}

model User {
  id             Int              @id @default(autoincrement())
  email          String           @unique
  password       String
  email_verified DateTime?
  role           RolesEnum
  fullname       String?
  image          String?
  image_path     String?
  no_phone       String?
  gender         String?
  birth_date     DateTime?
  birth_place    String?
  point          Int?             @default(0)
  is_active      Boolean?         @default(true)
  provider       AuthProviderEnum

  createdBy String?
  updatedBy String?
  deletedBy String?
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
  deletedAt DateTime?
}

model VerificationToken {
  userId   Int       @unique
  token    String    @unique
  otp      String
  createAt DateTime? @default(now())
  usingAt  DateTime?
}

model PasswordResetToken {
  id       Int       @id @default(autoincrement())
  userId   Int
  token    String    @unique
  createAt DateTime? @default(now())
  usingAt  DateTime?
}

model Templates {
  id         Int      @id @default(autoincrement())
  slug       String   @unique
  name       String
  price      Int
  disc_price Int?
  short_desc String?
  desc       String?
  ctg_key    String?
  ctg_name   String?
  url        String
  flag_name  String?
  flag_color String?
  colors     Json?
  language   String[]
  layouts    String[]
  is_active  Boolean? @default(true)

  createdBy String?
  updatedBy String?
  deletedBy String?
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
  deletedAt DateTime?

  rate_1_count Int? @default(0)
  rate_2_count Int? @default(0)
  rate_3_count Int? @default(0)
  rate_4_count Int? @default(0)
  rate_5_count Int? @default(0)

  captures TemplateCaptures[]
}

model TemplateCaptures {
  id        Int    @id @default(autoincrement())
  tmp_id    Int
  index     Int
  file_name String
  file_path String

  template Templates @relation(fields: [tmp_id], references: [id], onDelete: Cascade)
}
