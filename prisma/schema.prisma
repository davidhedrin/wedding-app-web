generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RolesEnum {
  ADMIN
  CLIENT
}

enum AuthProviderEnum {
  CREDENTIAL
  GOOGLE
  FACEBOOK

  @@map("AuthProviderEnum")
}

enum EventStatusEnum {
  PENDING
  NOT_PAID
  ACTIVE
  CANCELED
  ENDED
}

model User {
  id             Int              @id @default(autoincrement())
  email          String           @unique
  password       String
  email_verified DateTime?
  role           RolesEnum
  fullname       String?
  image          String?
  image_path     String?
  no_phone       String?
  gender         String?
  birth_date     DateTime?
  birth_place    String?
  point          Int?             @default(0)
  is_active      Boolean?         @default(true)
  provider       AuthProviderEnum

  createdBy String?
  updatedBy String?
  deletedBy String?
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
  deletedAt DateTime?

  events  Events[]
  user_tr Tr[]
}

model VerificationToken {
  userId   Int       @unique
  token    String    @unique
  otp      String
  createAt DateTime? @default(now())
  usingAt  DateTime?
}

model PasswordResetToken {
  id       Int       @id @default(autoincrement())
  userId   Int
  token    String    @unique
  createAt DateTime? @default(now())
  usingAt  DateTime?
}

model Templates {
  id         Int      @id @default(autoincrement())
  slug       String   @unique
  name       String
  price      Int
  disc_price Int?
  short_desc String?
  desc       String?
  ctg_key    String?
  ctg_name   String?
  url        String
  flag_name  String?
  flag_color String?
  colors     String?
  language   String?
  layouts    String?
  is_active  Boolean? @default(true)

  createdBy String?
  updatedBy String?
  deletedBy String?
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
  deletedAt DateTime?

  rate_1_count Int?    @default(0)
  rate_2_count Int?    @default(0)
  rate_3_count Int?    @default(0)
  rate_4_count Int?    @default(0)
  rate_5_count Int?    @default(0)
  sold         BigInt? @default(0)
  rate_count   Int?    @default(0)

  captures TemplateCaptures[]
  events   Events[]
}

model TemplateCaptures {
  id        Int    @id @default(autoincrement())
  tmp_id    Int
  index     Int
  file_name String
  file_path String

  template Templates @relation(fields: [tmp_id], references: [id], onDelete: Cascade)
}

model Events {
  id          Int          @id @default(autoincrement())
  user_id     Int
  tmp_id      Int
  tmp_status  EventStatusEnum
  tmp_code    String          @unique
  tmp_ctg     String
  tmp_ctg_key String

  createdBy String?
  updatedBy String?
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt

  user     User      @relation(fields: [user_id], references: [id], onDelete: Cascade)
  template Templates @relation(fields: [tmp_id], references: [id], onDelete: Cascade)
  tr       Tr[]
}

model Tr {
  tr_id     String    @id
  user_id   Int
  event_id  Int
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt

  pay_type        String?
  pay_key         String?
  pay_fee_percent Int?
  pay_fee_amount  Int?
  pay_status      Boolean   @default(false)
  pay_at          DateTime?
  pay_va          String?
  pay_expiry_time DateTime?
  pay_bill_key    String?
  pay_bill_code   String?
  qris_url        String?

  subtotal     Int
  disc_value   Int?
  total_amount Int

  user  User   @relation(fields: [user_id], references: [id], onDelete: Cascade)
  event Events @relation(fields: [event_id], references: [id], onDelete: Cascade)
}
